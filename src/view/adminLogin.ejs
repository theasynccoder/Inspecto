  <script>
  // Toggle password visibility
  document.querySelector('.toggle-password')?.addEventListener('click', function() {
    const password = document.getElementById('password');
    const icon = this.querySelector('i');
    if (password.type === 'password') {
      password.type = 'text';
      icon.classList.replace('fa-eye', 'fa-eye-slash');
    } else {
      password.type = 'password';
      icon.classList.replace('fa-eye-slash', 'fa-eye');
    }
  });

  // Handle messages from URL query params
  const urlParams = new URLSearchParams(window.location.search);
  const error = urlParams.get('error');

  // Only show error here, success will be handled after redirect
  if (error) {
    Swal.fire({
      icon: 'error',
      title: 'Login Failed',
      text: error,
      timer: 3000,
      showConfirmButton: true
    });
  }

  // Chatbot script
  document.getElementById('food-chatbot-btn').addEventListener('click', function() {
    const popup = document.getElementById('food-chatbot-popup');
    popup.style.display = popup.style.display === 'none' || popup.style.display === '' ? 'flex' : 'none';
  });

  document.getElementById('close-chatbot').addEventListener('click', function() {
    document.getElementById('food-chatbot-popup').style.display = 'none';
  });

  document.getElementById('send-chatbot').addEventListener('click', function() {
    const input = document.getElementById('chatbot-input');
    const message = input.value.trim();
    if (message) {
      appendMessage('You', message);
      input.value = '';
      // Simulate bot response
      setTimeout(() => {
        appendMessage('Bot', 'This is a dummy response.'); // Replace with real bot response
      }, 1000);
    }
  });

  function appendMessage(sender, text) {
    const messagesDiv = document.getElementById('chatbot-messages');
    const messageDiv = document.createElement('div');
    messageDiv.textContent = `${sender}: ${text}`;
    messagesDiv.appendChild(messageDiv);
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
  }
  </script>
