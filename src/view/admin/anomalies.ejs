<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anomaly Detection - Admin Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f9fafb;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .header {
      background: white;
      padding: 20px 30px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .header h1 {
      color: #2563eb;
      font-size: 28px;
    }

    .header-info {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .zone-badge {
      background: #2563eb;
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 14px;
    }

    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
      text-decoration: none;
      display: inline-block;
    }

    .btn-primary {
      background: #2563eb;
      color: white;
    }

    .btn-primary:hover {
      background: #1d4ed8;
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: #6b7280;
      color: white;
    }

    .btn-secondary:hover {
      background: #4b5563;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .stat-card h3 {
      color: #666;
      font-size: 14px;
      margin-bottom: 10px;
      text-transform: uppercase;
    }

    .stat-value {
      font-size: 32px;
      font-weight: bold;
      color: #2563eb;
    }

    .loading {
      text-align: center;
      padding: 40px;
      background: white;
      border-radius: 10px;
      margin: 20px 0;
    }

    .loading-spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #2563eb;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .section {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }

    .section h2 {
      color: #333;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #2563eb;
    }

    .anomaly-card {
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 15px;
      transition: all 0.3s;
    }

    .anomaly-card:hover {
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transform: translateY(-2px);
    }

    .severity-badge {
      display: inline-block;
      padding: 5px 12px;
      border-radius: 15px;
      font-size: 12px;
      font-weight: bold;
      text-transform: uppercase;
    }

    .severity-low { background: #d4edda; color: #155724; }
    .severity-medium { background: #fff3cd; color: #856404; }
    .severity-high { background: #f8d7da; color: #721c24; }
    .severity-critical { background: #dc3545; color: white; }

    .pattern-badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 11px;
      background: #e9ecef;
      color: #495057;
      margin-right: 5px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #999;
    }

    .empty-state i {
      font-size: 64px;
      margin-bottom: 20px;
      opacity: 0.3;
    }

    .health-score {
      text-align: center;
      padding: 40px;
      background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
      color: white;
      border-radius: 10px;
      margin-bottom: 30px;
    }

    .health-score-value {
      font-size: 72px;
      font-weight: bold;
      margin: 20px 0;
    }

    .health-status {
      font-size: 24px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .urgent-actions {
      background: #fff3cd;
      border-left: 4px solid #ffc107;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 5px;
    }

    .urgent-actions h3 {
      color: #856404;
      margin-bottom: 15px;
    }

    .action-item {
      padding: 15px;
      background: white;
      border-radius: 5px;
      margin-bottom: 10px;
      border-left: 3px solid #ffc107;
    }

    .action-item.critical {
      border-left-color: #dc3545;
      background: #fff5f5;
    }

    .tabs {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .tab {
      padding: 12px 24px;
      background: #f8f9fa;
      border: none;
      border-radius: 5px 5px 0 0;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
    }

    .tab.active {
      background: white;
      color: #2563eb;
      font-weight: bold;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    .chart-container {
      margin: 20px 0;
      padding: 20px;
      background: #f8f9fa;
      border-radius: 8px;
    }

    .error-message {
      background: #f8d7da;
      color: #721c24;
      padding: 15px;
      border-radius: 5px;
      border: 1px solid #f5c6cb;
      margin: 20px 0;
    }

    .success-message {
      background: #d4edda;
      color: #155724;
      padding: 15px;
      border-radius: 5px;
      border: 1px solid #c3e6cb;
      margin: 20px 0;
    }

    .detail-text {
      color: #666;
      line-height: 1.6;
      margin-top: 10px;
    }

    .grid-2col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    @media (max-width: 768px) {
      .grid-2col {
        grid-template-columns: 1fr;
      }
      
      .stats-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>üîç Inspection Anomaly Detection</h1>
      <div class="header-info">
        <span class="zone-badge">Zone: <%= zone %></span>
        <span style="color: #666;">Admin: <%= adminName %></span>
        <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loadingState" class="loading">
      <div class="loading-spinner"></div>
      <p>Analyzing inspection reports with AI...</p>
      <small>This may take a few moments</small>
    </div>

    <!-- Main Content (Hidden initially) -->
    <div id="mainContent" style="display: none;">
      
      <!-- Overall Health Score -->
      <div class="health-score" id="healthScore">
        <div class="health-status" id="healthStatus">Analyzing...</div>
        <div class="health-score-value" id="healthScoreValue">--</div>
        <p id="healthSummary">Loading analysis...</p>
      </div>

      <!-- Statistics -->
      <div class="stats-grid" id="statsGrid">
        <!-- Stats will be populated by JavaScript -->
      </div>

      <!-- Urgent Actions -->
      <div id="urgentActionsSection" style="display: none;">
        <div class="urgent-actions">
          <h3>‚ö†Ô∏è Urgent Actions Required</h3>
          <div id="urgentActionsList"></div>
        </div>
      </div>

      <!-- Tabs -->
      <div class="section">
        <div class="tabs">
          <button class="tab active" onclick="showTab('inspectors')">Inspector Anomalies</button>
          <button class="tab" onclick="showTab('restaurants')">Restaurant Risks</button>
          <button class="tab" onclick="showTab('regional')">Regional Trends</button>
        </div>

        <!-- Inspector Anomalies Tab -->
        <div id="inspectors-tab" class="tab-content active">
          <h2>Inspector Behavior Analysis</h2>
          <div id="inspectorAnomalies"></div>
        </div>

        <!-- Restaurant Risks Tab -->
        <div id="restaurants-tab" class="tab-content">
          <h2>Restaurant Risk Patterns</h2>
          <div id="restaurantAnomalies"></div>
        </div>

        <!-- Regional Trends Tab -->
        <div id="regional-tab" class="tab-content">
          <h2>Regional Trends</h2>
          <div id="regionalTrends"></div>
        </div>
      </div>

      <!-- Refresh Button -->
      <div style="text-align: center; margin-top: 30px;">
        <button class="btn btn-primary" onclick="refreshAnalysis()">üîÑ Refresh Analysis</button>
      </div>
    </div>

    <!-- Error State -->
    <div id="errorState" style="display: none;">
      <div class="error-message">
        <h3>‚ùå Analysis Failed</h3>
        <p id="errorMessage"></p>
        <button class="btn btn-primary" onclick="refreshAnalysis()" style="margin-top: 15px;">Try Again</button>
      </div>
    </div>
  </div>

  <script>
    // Tab switching
    function showTab(tabName) {
      // Hide all tabs
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
      });
      document.querySelectorAll('.tab').forEach(btn => {
        btn.classList.remove('active');
      });

      // Show selected tab
      document.getElementById(tabName + '-tab').classList.add('active');
      event.target.classList.add('active');
    }

    // Load anomaly analysis on page load
    window.addEventListener('DOMContentLoaded', () => {
      loadAnomalyAnalysis();
    });

    async function loadAnomalyAnalysis() {
      try {
        document.getElementById('loadingState').style.display = 'block';
        document.getElementById('mainContent').style.display = 'none';
        document.getElementById('errorState').style.display = 'none';

        const response = await fetch('/admin/api/anomalies/analyze');
        const result = await response.json();

        if (!result.success) {
          throw new Error(result.error || 'Analysis failed');
        }

        displayAnalysis(result.data);

      } catch (error) {
        console.error('Error loading analysis:', error);
        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('errorState').style.display = 'block';
        document.getElementById('errorMessage').textContent = error.message;
      }
    }

    function displayAnalysis(data) {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('mainContent').style.display = 'block';

      // Display overall health
      const health = data.overall_health;
      document.getElementById('healthScoreValue').textContent = health.score;
      document.getElementById('healthStatus').textContent = health.status.replace('_', ' ').toUpperCase();
      document.getElementById('healthSummary').textContent = health.summary;

      // Display statistics
      displayStatistics(data.statistics);

      // Display urgent actions
      if (data.urgent_actions && data.urgent_actions.length > 0) {
        displayUrgentActions(data.urgent_actions);
      }

      // Display inspector anomalies
      displayInspectorAnomalies(data.inspector_anomalies || []);

      // Display restaurant anomalies
      displayRestaurantAnomalies(data.restaurant_anomalies || []);

      // Display regional trends
      displayRegionalTrends(data.regional_trends || []);
    }

    function displayStatistics(stats) {
      const statsGrid = document.getElementById('statsGrid');
      statsGrid.innerHTML = `
        <div class="stat-card">
          <h3>Total Reports Analyzed</h3>
          <div class="stat-value">${stats.total_reports}</div>
        </div>
        <div class="stat-card">
          <h3>Average Score</h3>
          <div class="stat-value">${stats.average_score}</div>
        </div>
        <div class="stat-card">
          <h3>Excellent (4.5+)</h3>
          <div class="stat-value" style="color: #28a745;">${stats.score_distribution.excellent}</div>
        </div>
        <div class="stat-card">
          <h3>Poor (&lt;2.5)</h3>
          <div class="stat-value" style="color: #dc3545;">${stats.score_distribution.poor}</div>
        </div>
      `;
    }

    function displayUrgentActions(actions) {
      document.getElementById('urgentActionsSection').style.display = 'block';
      const list = document.getElementById('urgentActionsList');
      
      list.innerHTML = actions.map(action => `
        <div class="action-item ${action.priority === 'critical' ? 'critical' : ''}">
          <strong>${action.priority === 'critical' ? 'üö®' : '‚ö†Ô∏è'} ${action.type.replace('_', ' ').toUpperCase()}</strong>
          <p><strong>Target:</strong> ${action.target}</p>
          <p><strong>Reason:</strong> ${action.reason}</p>
        </div>
      `).join('');
    }

    function displayInspectorAnomalies(anomalies) {
      const container = document.getElementById('inspectorAnomalies');
      
      if (anomalies.length === 0) {
        container.innerHTML = '<div class="empty-state"><p>‚úÖ No inspector anomalies detected. All inspectors are performing within normal parameters.</p></div>';
        return;
      }

      container.innerHTML = anomalies.map(anomaly => `
        <div class="anomaly-card">
          <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 10px;">
            <div>
              <h3 style="color: #333; margin-bottom: 5px;">${anomaly.inspector_name} (ID: ${anomaly.inspector_id})</h3>
              <span class="pattern-badge">${anomaly.pattern.replace('_', ' ')}</span>
            </div>
            <span class="severity-badge severity-${anomaly.severity}">${anomaly.severity}</span>
          </div>
          <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px; margin: 15px 0;">
            <div>
              <small style="color: #666;">Average Score</small>
              <div style="font-size: 24px; font-weight: bold; color: #2563eb;">${anomaly.avg_score}</div>
            </div>
            <div>
              <small style="color: #666;">Deviation</small>
              <div style="font-size: 24px; font-weight: bold; color: ${parseFloat(anomaly.deviation) > 0 ? '#28a745' : '#dc3545'};">
                ${anomaly.deviation > 0 ? '+' : ''}${anomaly.deviation}
              </div>
            </div>
          </div>
          <p class="detail-text">${anomaly.details}</p>
        </div>
      `).join('');
    }

    function displayRestaurantAnomalies(anomalies) {
      const container = document.getElementById('restaurantAnomalies');
      
      if (anomalies.length === 0) {
        container.innerHTML = '<div class="empty-state"><p>‚úÖ No restaurant anomalies detected. All establishments show normal inspection patterns.</p></div>';
        return;
      }

      container.innerHTML = anomalies.map(anomaly => `
        <div class="anomaly-card">
          <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 10px;">
            <div>
              <h3 style="color: #333; margin-bottom: 5px;">${anomaly.restaurant_name} (ID: ${anomaly.restaurant_id})</h3>
              <span class="pattern-badge">${anomaly.pattern.replace(/_/g, ' ')}</span>
              ${anomaly.needs_reinspection ? '<span class="pattern-badge" style="background: #dc3545; color: white;">Needs Re-inspection</span>' : ''}
            </div>
            <span class="severity-badge severity-${anomaly.risk_level}">${anomaly.risk_level} risk</span>
          </div>
          <p class="detail-text">${anomaly.details}</p>
        </div>
      `).join('');
    }

    function displayRegionalTrends(trends) {
      const container = document.getElementById('regionalTrends');
      
      if (trends.length === 0) {
        container.innerHTML = '<div class="empty-state"><p>‚ÑπÔ∏è No significant regional trends detected.</p></div>';
        return;
      }

      container.innerHTML = trends.map(trend => `
        <div class="anomaly-card">
          <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 10px;">
            <div>
              <h3 style="color: #333; margin-bottom: 5px;">Zone: ${trend.zone}</h3>
              <div style="margin-top: 10px;">
                <small style="color: #666;">Average Score</small>
                <div style="font-size: 24px; font-weight: bold; color: #2563eb;">${trend.avg_score}</div>
              </div>
            </div>
            <span class="severity-badge severity-${trend.severity}">${trend.severity}</span>
          </div>
          <p class="detail-text">${trend.anomaly}</p>
        </div>
      `).join('');
    }

    function refreshAnalysis() {
      loadAnomalyAnalysis();
    }
  </script>
</body>
</html>
