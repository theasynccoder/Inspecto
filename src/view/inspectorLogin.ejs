            <button type="button" class="toggle-password">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="btn-submit">
          <span>Log In</span>
          <i class="fas fa-arrow-right"></i>
        </button>
      </form>
    </div>
